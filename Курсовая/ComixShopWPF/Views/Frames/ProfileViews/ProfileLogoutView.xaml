<UserControl x:Class="ComixShopWPF.Views.Frames.ProfileViews.ProfileLogoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComixShopWPF.Views.Frames.ProfileViews"
             xmlns:pfvm="clr-namespace:ComixShopWPF.ViewModels.ProfileViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <UserControl.DataContext>
        <pfvm:ProfileLogoutViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Button HorizontalAlignment="Center" Command="{Binding LogoutCommand}" Content="Выйти из аккаунта"/>
    </Grid>
</UserControl>
